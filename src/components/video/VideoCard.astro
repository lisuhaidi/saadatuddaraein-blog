---
import { Card } from '../ui/card';
import { Play } from "lucide-react";

export interface Props {
  video: {
    id: number;
    slug: string;
    urlThumbnai: string;
    title: string;
    body: string;
    createdAt: string;
    platform: string;
  };
}

const { video } = Astro.props;
---

<a
  href={`/video/${video.slug}`}
  class="group block h-full"
>
  <Card className="h-full overflow-hidden border shadow-sm hover:shadow-lg transition-all duration-300 flex flex-col">
    {/* Thumbnail with Play Button */}
    <div class="relative aspect-video overflow-hidden bg-muted">
      <img
        src={video.urlThumbnai}
        alt={video.title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
      />

      {/* Overlay */}
      <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-colors" />

      {/* Play Button */}
      <div class="group absolute inset-0 flex items-center justify-center">
        <div class="w-16 h-16 rounded-full bg-white/90 group-hover:bg-white flex items-center justify-center group-hover:scale-110 transition-all shadow-lg">
          <Play className="w-7 h-7 text-primary group-hover:fill-primary ml-1" />
        </div>
      </div>
      
      {/* Platform Badge */}
      <div class="absolute top-2 left-2 px-2 py-1 bg-black/80 text-white text-xs font-medium rounded">
        {video.platform}
      </div>
    </div>

    {/* Video Info */}
    <div class="px-4 flex flex-col flex-grow">
      <h3 class="font-semibold text-xl mb-2 line-clamp-2 group-hover:text-primary transition-colors">
        {video.title}
      </h3>
      <p class="text-sm text-muted-foreground line-clamp-2 mb-2 flex-grow">
        {video.body}
      </p>
      <p class="text-xs text-muted-foreground mt-auto">
        {new Date(video.createdAt).toLocaleDateString("id-ID", {
          day: "numeric",
          month: "long",
          year: "numeric",
        })}
      </p>
    </div>
  </Card>
</a>
