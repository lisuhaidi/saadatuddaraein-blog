---
import Layout from "@/layouts/Layout.astro";
---
<Layout>
	<main class="min-h-screen pt-20 bg-background">
		<div class="container mx-auto py-10 px-4">
			<!-- Header Section -->
			<div class="mb-8">
				<h1 class="text-4xl font-bold text-foreground mb-2">
					Admin Dashboard
				</h1>
				<p class="text-muted-foreground">
					Kelola konten dan pengaturan website Anda
				</p>
			</div>

			<!-- Navigation Cards -->
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				<!-- Gallery Card -->
				<a
					href="/admin/gallery"
					class="group relative overflow-hidden rounded-lg border border-border bg-card p-6 shadow-sm transition-all hover:shadow-md hover:border-border/80"
				>
					<div class="flex items-start gap-4">
						<div class="rounded-lg bg-primary/10 p-3 text-primary transition-colors group-hover:bg-primary/20">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
							</svg>
						</div>
						<div class="flex-1">
							<h3 class="font-semibold text-foreground mb-1 group-hover:text-primary transition-colors">
								Galeri
							</h3>
							<p class="text-sm text-muted-foreground">
								Kelola foto dan media galeri
							</p>
						</div>
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-muted-foreground transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</div>
				</a>
			</div>
		</div>
	</main>
</Layout>