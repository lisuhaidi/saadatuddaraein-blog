---
import Layout from "./Layout.astro";
import { Image } from "astro:assets";

const {
  name,
  position,
  imageUrl,
  bioData,
  titleBio,
  bodyBio,
  socialMedia,
  email,
} = Astro.props;
---

<Layout title={name}>
  <section class="py-12 bg-background">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap lg:flex-nowrap gap-6">
        <!-- Sidebar Profile Card -->
        <div class="w-full lg:w-1/3">
          <div class="bg-card border border-border rounded-lg shadow-sm p-6 sticky top-6">
            <div class="flex flex-col items-center">
              <Image
                src={imageUrl}
                alt={name}
                width={400}
                height={400}
                class="rounded-full w-32 h-32 object-cover border-4 border-primary/10 mb-4"
              />
              <h1 class="text-2xl font-bold text-center text-foreground">{name}</h1>
              <p class="text-muted-foreground text-center mt-1">{position}</p>
            </div>

            <!-- Biodata Section -->
            <div class="mt-6 space-y-4">
              <div class="border-t border-border pt-4">
                <h2 class="text-lg font-semibold text-foreground mb-2">Biodata</h2>
                <p class="text-sm text-muted-foreground whitespace-pre-line leading-relaxed">
                  {bioData}
                </p>
              </div>

              <!-- Contact Section -->
              <div class="border-t border-border pt-4">
                <h2 class="text-lg font-semibold text-foreground mb-3">Kontak</h2>
                <div class="space-y-2">
                  <div class="flex items-start gap-2">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5 text-muted-foreground mt-0.5 flex-shrink-0"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      ></path>
                    </svg>
                    <a
                      href={`mailto:${email}`}
                      class="text-sm text-primary hover:underline break-all"
                    >
                      {email}
                    </a>
                  </div>
                  <div class="flex items-start gap-2">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5 text-muted-foreground mt-0.5 flex-shrink-0"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                      ></path>
                    </svg>
                    <a
                      href={socialMedia}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-primary hover:underline break-all"
                    >
                      Social Media
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="w-full lg:w-2/3">
          <div class="bg-card border border-border rounded-lg shadow-sm p-8">
            <h2 class="text-3xl font-bold text-foreground mb-6 border-b border-border pb-4">
              {titleBio}
            </h2>
            <div class="prose prose-slate dark:prose-invert max-w-none">
              <div class="text-muted-foreground whitespace-pre-line leading-relaxed space-y-4">
                {
                  bodyBio.split('\n\n').map((paragraph: string) => (
                    <p class="text-base">{paragraph}</p>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>